# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 160

# "Frontend"
[*.{css,js,jsx,sass,scss,json}]
indent_size = 2

# "Backend"
[*.{html,php}]

# Config files
[*.{yml,rb}]
indent_size = 2
